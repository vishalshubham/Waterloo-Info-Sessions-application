<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#FFBB33</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="style_text_session_name">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="style_text_session_date_time">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#8D8D8D</item>
    </style>

    <style name="style_text_session_location">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#8D8D8D</item>
    </style>

    <style name="style_text_session_for">
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#8D8D8D</item>
    </style>

    <style name="style_text_round">
        <item name="android:background">@drawable/text_round_corner</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="style_info_session_main_value">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="style_info_session_value">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="style_info_session_id">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#8D8D8D</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="style_round">
        <item name="android:background">@drawable/text_round_corner</item>
    </style>

    <style name="style_button_enter">
        <item name="android:background">@drawable/button</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
